<%= form_for(task) do |form| %>

    <div class="form-group">
      <label for="task_name">任務名稱</label>
      <%= form.text_field :name, class:"col form-control" %>
    </div>

    <div class="form-group">
      <label for="task_content">任務內容</label>
      <%= form.text_area :content, class:"col form-control" %>
    </div>

    <div class="form-group">
      <label for="task_start_date">任務開始時間</label>
      <%= form.date_field :start_date, class:"col form-control" %>
    </div>

    <div class="form-group">
      <label for="task_end_date">任務結束時間</label>
      <%= form.date_field :end_date, class:"col form-control" %>
    </div>

  <%= form.submit '送出', class: "btn btn-primary btn-lg btn-block" %>

<% end %>