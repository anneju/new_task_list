<h1>任務一覽表</h1>

<table>
  <thead>
    <tr>
      <th>任務名稱</th>
      <th>任務內容</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.name, task %></td>
        <td><%= task.content %></td>
        <td><%= link_to "更新", edit_task_path(task) %></td>
        <td><%= link_to "刪除", task, method: 'delete', data: {confirm: '確定要刪除嗎？'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<button><%= link_to "新增任務", new_task_path %></button>