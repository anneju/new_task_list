<h1>任務一覽表</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">任務名稱</th>
      <th scope="col">任務內容</th>
      <th scope="col">任務開始時間</th>
      <th scope="col">任務結束時間</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= link_to task.name, task %></td>
      <td><%= task.content %></td>
      <td><%= task.start_date %></td>
      <td><%= task.end_date %></td>
      <td>
        <button type="button" class="btn btn-warning"><%= link_to "更新", edit_task_path(task) %></button>
        <button type="button" class="btn btn-danger"><%= link_to "刪除", task, method: 'delete', data: {confirm: '確定要刪除嗎？'} %></button>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<button type="button" class="btn btn-info"><%= link_to "新增任務", new_task_path %></button>